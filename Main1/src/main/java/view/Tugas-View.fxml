<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tugasapp.controller.TugasController">

    <VBox alignment="CENTER" prefHeight="500" prefWidth="600" spacing="10">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="ðŸ“ Data Tugas Harian" />

        <HBox spacing="10">
            <Label text="Judul:" />
            <TextField fx:id="tfJudul" prefWidth="300" />
        </HBox>

        <HBox spacing="10">
            <Label text="Deskripsi:" />
            <TextArea fx:id="taDeskripsi" prefHeight="60" prefWidth="300" />
        </HBox>

        <HBox spacing="10">
            <Label text="Deadline:" />
            <DatePicker fx:id="dpDeadline" />
        </HBox>

        <HBox spacing="10">
            <Label text="Status:" />
            <ComboBox fx:id="cbStatus" />
        </HBox>

        <HBox spacing="10">
            <Button onAction="#handleAdd" text="Tambah" textFill="#07fa1c" />
            <Button onAction="#handleUpdate" text="Update" textFill="#071eef" />
            <Button onAction="#handleDelete" text="Hapus" textFill="#f70606" />
            <Button onAction="#handleClear" text="Clear" />
        </HBox>

        <TableView fx:id="tableTugas" prefHeight="250">
            <columns>
                <TableColumn fx:id="colJudul" prefWidth="150" text="Judul" />
                <TableColumn fx:id="colDeskripsi" prefWidth="200" text="Deskripsi" />
                <TableColumn fx:id="colDeadline" prefWidth="120" text="Deadline" />
                <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
